<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chi_tiet_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#d1d1e0"
    tools:context="com.example.nguye.restaurant_project.activity.ChiTietMenu"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/ic_menu_menu"
        android:id="@+id/imgCT"
        android:layout_weight="0.13"
        android:layout_height="wrap_content" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:id="@+id/txtNen"
        android:background="#fff"
        android:layout_weight="0.47"
        android:layout_below="@+id/imgCT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:layout_height="150dp" />


    <TextView
        android:text="@string/activity_chi_tiet_menu_Ten_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="46dp"
        android:id="@+id/txtTenCT"
        android:layout_below="@+id/imgCT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/activity_chi_tiet_menu_Gia_tien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/txtGiaCT"
        android:layout_below="@+id/txtTenCT"
        android:layout_alignLeft="@+id/txtTenCT"
        android:layout_alignStart="@+id/txtTenCT" />

    <Button
        android:id="@+id/btnGotoDatBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtNen"
        android:layout_marginTop="202dp"
        android:layout_centerInParent="true"
        android:text="@string/activity_chi_tiet_menu_Button_dat_ban" />
</RelativeLayout>
